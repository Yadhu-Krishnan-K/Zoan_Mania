    <form style="width: 100%;" class="mt-5" id="sumit">

        <input type="email" name="email" class="box p-2" id="email" placeholder="Email" required><br>
        <input type="password" name="password" id="password" class="box mt-4 p-2" placeholder="password" required> <br>
