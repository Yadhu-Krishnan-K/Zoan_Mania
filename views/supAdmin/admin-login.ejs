<script>
    $(document).ready(function () {
        $('#sumit').submit(event=>{
            event.preventDefault()
            let email = $('#email').val()
            let password = $('#password').val()
            console.log("email-",email,"password-",password)
            fetch('/admin/check',{
                method:'POST',
                headers:{
                    'Content-Type': 'application/json'
                },
                body:JSON.stringify({
                    email,
                    password
                })
            })
            
           
            .then(res=>res.json())
            .then((data)=>{
                // console.log(data);
                if(data.success){
                    window.location.replace('/admin/Customers')
                    console.log(data);
                }else if(!(data.success)){
                    let dis = $('#disapear')
                    dis.text('wrong input');
                    dis.show()
                    setTimeout(function () {
                        dis.hide()
                    }, 4000);
                }
            })
        })
    })
     

</script>

