<%- include('../layouts/user/header') -%>

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow rounded-3 p-4">
          <h4 class="text-center mb-4 fw-bold">Change Password</h4>

          <!-- Error Alert -->
          <div id="errorAlert" class="alert alert-danger d-none"></div>

          <!-- Old Password -->
          <div class="mb-3">
            <label for="OldPass" class="form-label">Enter Old Password</label>
            <div class="input-group">
              <input id="OldPass" name="OldPass" type="password" class="form-control" placeholder="Old Password">
            </div>
            <small id="oldPassAlert" class="text-danger d-none"></small>
          </div>

          <!-- New Password -->
          <div class="mb-3">
            <label for="Pass" class="form-label">Enter New Password</label>
            <div class="input-group">
              <input id="Pass" name="Pass" type="password" class="form-control" placeholder="New Password"
                oninput="validatePasswords()">
            </div>
            <small id="passAlert" class="text-danger d-none"></small>
          </div>

          <!-- Confirm Password -->
          <div class="mb-4">
            <label for="conPass" class="form-label">Confirm New Password</label>
            <div class="input-group">
              <input id="conPass" name="conPass" type="password" class="form-control"
                placeholder="Re-enter New Password" oninput="validatePasswords()">
            </div>
            <small id="conPassAlert" class="text-danger d-none"></small>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button class="btn btn-success" onclick="clicker()">Change Password</button>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="/htmlExecutable/user/userPasswordChange.js"></script>

  <%- include('../layouts/user/footer') -%>