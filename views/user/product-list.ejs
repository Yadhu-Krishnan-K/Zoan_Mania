<%- include('../layouts/user/header'); -%>







  <div class="container-fluid">

    <!-- Carousel -->
    <div class="row">
      <div class="col-12 d-flex justify-content-center mt-4 mb-5">
        <h2>See Our Products</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="filter d-flex flex-column align-items-start rounded shadow ms-3 mt-3 p-3" style="width: 90%; position: sticky; top: 200px;">
          <div class="d-flex justify-content-center mb-4" style="width: 100%;"><h4>Categories</h4></div>

          <% categories.forEach((category)=>{ %>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              <%= category.catName %>
            </label>
          </div>
          <% }) %>

        </div>

      </div>
      <div class="col-md-9">
        <div class="row">
          
          <% productsList.forEach(product=> { %>
            <% if(product.Image.length !== 0){ %>

            <div class="col-md-6 col p-4">
              <div class="card" style="width: 18rem;margin-left: 25px;">
                <a href="/productDetail/<%= product._id %>"><img class="card-img-top img-fluid"
                    style="height: 290px; width: 250px; padding: 20px; margin-left: 20px;"
                    src="/uploads/<%=product.Image[0]%>" alt="Card image cap"></a>
                <div class="card-body">
                  <h6 class="card-title">
                    <%=product.Name%>
                  </h6>
    
                  <% if(product.Stock>= 1 && (cartData && cartData.Items.length !== 0 )){ %>
                    <% let isInCart = false %>
                      <% if(cartData !==null){ %>
                        <% for (let index=0; index < cartData.Items.length; index++) { %>
                          <% if(JSON.stringify(product._id)==JSON.stringify(cartData.Items[index].ProductId._id)){ %>
                            <% isInCart=true %>
                              <% break %>
                                <% } %>
                                  <% } %>
                                    <% }else{isInCart=false} %>
                                      <% if(isInCart){ %>
                                        <a href="/cart" class="btn btn-warning">Go To Cart</a>
                                        <% }else{ %>
                                          <button class="btn btn-warning" id="buton<%= product._id %>" onclick="addToCart('<%= product._id %>')">Add To Cart</button>
                                          <% } %>
                                            <% }else{ %>
                                              <p class="card-text" style="font-weight: 800; color: rgb(238, 101, 101);">Out
                                                Of Stock</p>
                                              <a href="" class="btn btn-warning" style="pointer-events: none">Add To
                                                Cart</a>
    
                                              <% } %>
                </div>
              </div>
            </div>

            <% } %>
            <% }) %>

        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 d-flex justify-content-center">
        <nav aria-label="Page navigation" class="m-3">
          <ul class="pagination ">
            <% for(i=1;i<=pageNums;i++){ %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

    <script>
      function addToCart(P_id){
        $(document).ready(function(){
          fetch(`/addToCart/${P_id}`)
          .then(res=>res.json())
          .then((data)=>{
            console.log("dat======",data)
            if(data.success){
              //add sweet alert
              location.reload()
              alert('one item add to cart')
            }
          })
        })
      }

    </script>
<%- include('../layouts/user/footer'); -%>