<%- include('../layouts/user/header'); -%>

<div class="container-fluid my-4">
  <!-- Page Title -->
  <div class="row">
    <div class="col-12 text-center mb-4">
      <h2 class="fw-bold">See Our Products</h2>
    </div>
  </div>

  <div class="row">
    <!-- Sidebar / Filters -->
    <!-- Sidebar: put this inside the .row where you want the sidebar to live -->
<!-- Desktop: shows as a left column (col-md-3). Mobile: full-width stacked above products. -->
<aside class="col-sm-4 col-md-3 mb-4">
  <div class="filter border rounded shadow-sm p-3 sticky-md-top" style="top: 100px;">
    <form id="filterForm" method="GET" action="">
      <div class="mb-3 text-center">
        <h4 class="fw-semibold mb-0">Categories</h4>
      </div>

      <% categories.forEach((category) => { %>
        <div class="form-check mb-2">
          <input
            class="form-check-input"
            type="checkbox"
            name="category"
            value="<%= String(category._id) %>"
            id="cat-<%= String(category._id) %>"
          >
          <label class="form-check-label" for="cat-<%= String(category._id) %>">
            <%= category.catName %>
          </label>
        </div>
      <% }) %>

      <!-- Simple Apply / Reset row (keeps no extra features) -->
      <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary btn-sm w-100">Apply</button>
        <a href="#" class="btn btn-outline-secondary btn-sm w-100">Reset</a>
      </div>
    </form>
  </div>
</aside>


    <!-- Product Cards -->
    <div class="col-sm-8 col-md-9">
      <div class="row g-4">
        <% productsList.forEach(product => { %>
          <% if (product.Image.length !== 0) { %>
            <div class="col-12 col-sm-6 col-lg-4">
              <div class="card h-100 shadow-sm border-0">
                <a href="/productDetail/<%= product._id %>" class="text-decoration-none">
                  <img src="/uploads/<%= product.Image[0] %>" 
                       class="card-img-top img-fluid p-3"
                       alt="<%= product.Name %>"
                       style="object-fit: contain; height: 250px;">
                </a>

                <div class="card-body text-center">
                  <h6 class="card-title text-dark fw-semibold mb-2"><%= product.Name %></h6>

                  <% if (product.Stock >= 1 && (cartData && cartData.Items.length !== 0)) { %>
                    <% let isInCart = false; %>
                    <% if (cartData !== null) { %>
                      <% for (let index = 0; index < cartData.Items.length; index++) { %>
                        <% if (String(product._id) === String(cartData.Items[index].ProductId._id)) { %>
                          <% isInCart = true; break; %>
                        <% } %>
                      <% } %>
                    <% } else { %>
                      <% isInCart = false; %>
                    <% } %>

                    <% if (isInCart) { %>
                      <a href="/cart" class="btn btn-warning w-100 mt-2">Go To Cart</a>
                    <% } else if (!locals.name) { %>
                      <a href="/login" class="btn btn-success w-100 mt-2">Add To Cart</a>
                    <% } else { %>
                      <button class="btn btn-warning w-100 mt-2"
                              id="button<%= product._id %>"
                              onclick="addToCart('<%= product._id %>')">
                        Add To Cart
                      </button>
                    <% } %>

                  <% } else { %>
                    <p class="card-text fw-bold text-danger mt-2">Out Of Stock</p>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <div class="row">
    <div class="col-12 d-flex justify-content-center mt-4">
      <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm flex-wrap">
          <% for (let i = 1; i <= pageNums; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>
</div>

<script>
  function addToCart(P_id) {
    fetch(`/addToCart/${P_id}`)
      .then(res => res.json())
      .then((data) => {
        if (data.success) {
          Swal.fire({
            position: "top",
            icon: "success",
            title: "One item added to cart",
            showConfirmButton: false,
            timer: 1500
          });
          location.reload();
        }
      })
      .catch(err => console.error('Error:', err));
  }
</script>

<%- include('../layouts/user/footer'); -%>
