    </div>

    <div class="container-fluid">
      <div class="row ">
        <% productModel.forEach(product => {  %>
          <% console.log("Product Stock:", product.Stock); %>
          <% if(product.Image.length !== 0){ %>
            <div class="col-12 col-md-4 col-xl-3 p-4 d-flex justify-content-center">
              <div class="card shadow border" style="width: 18rem;">
                  <a href="/productDetail/<%= product._id %>" class="d-flex justify-content-center">
                    <img class="card-img-top" style="height: 290px; width: 250px; padding: 20px;" src="/uploads/<%= product.Image[0] %>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                      <h6 class="card-title"><%=product.Name%></h6>
                      <% if(product.Stock >= 1 ){ %>
                        <p class="card-text" style="font-weight: 700;">â‚¹<%=product.Price%>/-</p>   
                        
                        <button class="btn btn-warning" type="button">Add To Cart</button>
                      
                      <% }else if(product.Stock < 1){ %>
                        <p class="card-text" style="font-weight: 800; color: rgb(238, 101, 101);">Out of stock</p>
                        <a href="#" class="btn btn-warning" style="pointer-events: none">Add To Cart</a>
                      <% } %>
                      
                      <a href="#" class="btn btn-primary">view Details</a>
                  </div>
              </div>     
            </div>
        <% } %>
        <% }) %>
      </div>
